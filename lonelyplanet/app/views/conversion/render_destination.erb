<div id="header">
   <div id="logo"></div>
   <h1>Lonely Planet: <%= @node_name %></h1>
</div>    
 <div id="wrapper">
 <div id="sidebar">
   <div class="block">
     <h3>Navigation</h3>
     <div class="content">
       <div class="inner">
         <% if @parent_node.name == 'node' %>
			<b>Go to: </b>
			<% @parent_node.each_child do |element| %>
				<% if element.name == 'node_name' %>
					<b><%= link_to element.content, :controller => "conversion", :action => "render_destination", :id => @parent_atlas_node_id.value %></b>
				<% end %>
			<% end %>
		<% end %>
			<!-- create link list of related destinations -->	
			<% first_time = true %>
			<% @node.each_child do |element| %>
				<% if element.name == 'node' %>				
					<% element.each_child do |element2| %>
						<% if element2.name == 'node_name' %>
							<% if first_time == true %>
								<b>Destinations related to <%= @node_name %>: </b></br></br>
								<% first_time = false %>
							<% end %>
							<% attributes2 = element.attributes %>
							<% atlas_node_id2 = attributes2.get_attribute('atlas_node_id') %>
					    	<% if atlas_node_id2 == nil %>
					      		<% atlas_node_id2 = attributes2.get_attribute('geo_id') %>    
					    	<% end %>
							<b><%= link_to element2.content, :controller => "conversion", :action => "render_destination", :id => atlas_node_id2.value %></b>
						<% end %>
					<% end %>
				<% end %>
				</br>
			<% end %>
       </div>
     </div>
   </div>
 </div>

 <div id="main">
   <div class="block">
     <div class="secondary-navigation">
       <ul>
         <li class="first"><%= link_to @node_name, :controller => "conversion", :action => "render_destination", :id => @atlas_node_id.value %></li>
       </ul>
       <div class="clear"></div>
     </div>
     <div class="content">            
       <div class="inner">
		  <p><%= @overview.content %></p>
		 </div>
        </div>
     </div>
   </div>
 </div>
 </div>